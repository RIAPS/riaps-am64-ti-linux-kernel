#!/usr/bin/make -f

srctree ?= .

build-indep:
build-arch:
	$(MAKE) V=1 ARCH=arm64 -j2 KERNELRELEASE=6.1.83-k3-rt KBUILD_BUILD_VERSION=1 -f $(srctree)/Makefile defconfig ti_arm64_prune.config ti_rt.config riaps.config
	$(MAKE) V=1 ARCH=arm64 -j2 KERNELRELEASE=6.1.83-k3-rt KBUILD_BUILD_VERSION=1 -f $(srctree)/Makefile
	#$(MAKE) V=1 ARCH=arm64 CROSS_COMPILE="$AARCH64_TOOL_LOC/aarch64-none-linux-gnu-" -j2 KERNELRELEASE=6.1.83-k3-rt KBUILD_BUILD_VERSION=1 -f $(srctree)/Makefile defconfig ti_arm64_prune.config ti_rt.config riaps.config
	#$(MAKE) V=1 ARCH=arm64 CROSS_COMPILE="$AARCH64_TOOL_LOC/aarch64-none-linux-gnu-" -j2 KERNELRELEASE=6.1.83-k3-rt KBUILD_BUILD_VERSION=1 -f $(srctree)/Makefile


build: build-arch

binary-indep:
binary-arch: build-arch
	$(MAKE) V=1 ARCH=arm64 -j2 KERNELRELEASE=6.1.83-k3-rt KBUILD_BUILD_VERSION=1 -f $(srctree)/Makefile intdeb-pkg
	#$(MAKE) V=1 ARCH=arm64 CROSS_COMPILE="$AARCH64_TOOL_LOC/aarch64-none-linux-gnu-" -j2 KERNELRELEASE=6.1.83-k3-rt KBUILD_BUILD_VERSION=1 -f $(srctree)/Makefile intdeb-pkg


clean:
	rm -rf debian/files debian/linux-*
	$(MAKE) clean

binary: binary-arch