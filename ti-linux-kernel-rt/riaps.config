# These are the kernel flags desired for the RIAPS Platform
#
# Flags for time synchronization efforts
#
CONFIG_NETWORK_PHY_TIMESTAMPING=y
CONFIG_PTP_1588_CLOCK=y

#
# Flags to enable Apparmor
#
CONFIG_SECURITY_APPARMOR=y

#
# Flags to enable use of Quota tools
#
CONFIG_QUOTA=y
CONFIG_QFMT_V2=y
CONFIG_QUOTA_TREE=y
CONFIG_QUOTA_NETLINK_INTERFACE=y

#
# Flags for BPF
#
CONFIG_BPF_SYSCALL=y
CONFIG_KPROBES=y
CONFIG_BRANCH_PROFILE_NONE=y
CONFIG_HAVE_FUNCTION_TRACER=y
CONFIG_TRACEPOINTS=y
CONFIG_FTRACE=y
CONFIG_HAVE_DYNAMIC_FTRACE=y
CONFIG_HAVE_DYNAMIC_FTRACE_WITH_REGS=y
CONFIG_DYNAMIC_FTRACE=y
CONFIG_FUNCTION_TRACER=y
#CONFIG_KPROBE_EVENTS_ON_NOTRACE=y  - consider adding this, not in initial testing

#
# Flags to enable uEnv.txt (not if needed)
#
#CONFIG_ENV_OFFSET=0x680000
#CONFIG_ENV_IS_IN_MMC=y
#CONFIG_SYS_MMC_ENV_PART=1

#
# Flags for iptables
#
CONFIG_NETFILTER_XTABLES=y
CONFIG_IP_NF_NAT=y
CONFIG_IP_NF_FILTER=y
CONFIG_IP_NF_IPTABLES=y
CONFIG_NETFILTER_XT_MATCH_OWNER=y